{
  "name": "whatsdesktop",
  "productName": "WhatsDesktop",
  "version": "1.8.0",
  "description": "Unofficial WhatsApp app",
  "license": "MIT",
  "repository": "mawie81/whatsdesktop",
  "author": {
    "name": "Marcel Wiehle",
    "email": "marcel@wiehle.me",
    "url": "http://marcel.wiehle.me"
  },
  "engines": {
    "node": ">=4"
  },
  "electronVersion": "1.4.7",
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "build -mwl"
  },
  "files": [
    "index.js",
    "menu.js",
    "media/logo-tray.png",
    "media/logo-tray-white.png",
    "media/logo-tray-blue.png"
  ],
  "keywords": [
    "electron-app",
    "WhatsApp",
    "messenger",
    "chat",
    "instant",
    "messaging",
    "WhatsDesktop"
  ],
  "dependencies": {
    "electron-config": "^0.1.1",
    "electron-debug": "^0.2.1",
    "electron-window-state": "^3.0.0"
  },
  "devDependencies": {
    "electron-builder": "^3.10.9",
    "electron": "^1.4.7",
    "xo": "*"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "dist/**"
    ],
    "space": true,
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ]
    }
  },
  "build": {
    "appId": "me.wiehle.whatsdesktop",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": ["deb", "rpm", "AppImage"]
    }
  }
}
